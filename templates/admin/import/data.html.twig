{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block content_title %}
    <h5 style="display: inline;margin-right: 1.5em;">Importer les données de bases</h5><span>Département - Centre de Production - Poste de Travail - Activité</span>
{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <form method="post" action="{{ path('import_data_save') }}" target="_blank" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="file" class="custom-file-input" id="validatedCustomFile" name="importfile" required>
                        <label class="custom-file-label" for="validatedCustomFile">Sélectionner un fichier CSV (séparateur point-virgule)</label>
                        <div class="invalid-feedback">Fichier invalide</div>
                    </div>
                    <a type="file" href="{{ url_model_file }}" class="btn btn-primary">Fichier model pour l'import</a>
                    <button type="submit" class="btn btn-primary">Uploader</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}


{% block body_javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}